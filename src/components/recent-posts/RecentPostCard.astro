---
import type { BlogPost } from '@utils/blogPost'

interface Props {
  post: BlogPost
  postUrl: string | undefined
}

const { post, postUrl } = Astro.props
---

<div
  class="w-full md:w-4/12 lg:w-4/12 p-4 rounded-lg border border-gray-200 shadow-md dark:border-gray-700 flex flex-col justify-between"
>
  <a href={postUrl || '#'}>
    <h3 class="mb-2 text-xl font-medium text-gray-700 dark:text-gray-50">
      {post.title}
    </h3>
  </a>
  <div>
    <small class="text-xs font-thin opacity-50">{post.locale}</small>
    <p class="mb-6 font-normal text-gray-700 dark:text-gray-400">
      {post.description ? post.description : 'Still being written..'}
    </p>
    <a
      href={postUrl || '#'}
      class="inline-flex items-center justify-between py-2 px-3 text-sm font-medium text-center text-gray-50 bg-teal-700 rounded-lg hover:bg-teal-800 focus:ring-4 focus:outline-none focus:ring-teal-300 dark:bg-teal-600 dark:hover:bg-teal-800 dark:focus:ring-teal-300"
    >
      Read more
      <svg
        aria-hidden="true"
        class="ml-2 -mr-1 w-4 h-4"
        fill="currentColor"
        viewBox="0 0 20 20"
        xmlns="http://www.w3.org/2000/svg"
        ><path
          fill-rule="evenodd"
          d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z"
          clip-rule="evenodd"></path>
      </svg>
    </a>
  </div>
</div>
